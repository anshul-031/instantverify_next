# Staging Environment
NODE_ENV=staging
NEXTAUTH_URL=https://staging.instantverify.in
NEXTAUTH_SECRET=your-staging-secret-key

# Database
DATABASE_URL="postgresql://user:password@staging-db.instantverify.in:5432/instantverify_staging?schema=public"

# AWS S3
AWS_ACCESS_KEY_ID=your-staging-aws-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=instantverify-staging

# Email (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=your-staging-sendgrid-user
SMTP_PASSWORD=your-staging-sendgrid-password
SMTP_FROM_EMAIL=noreply@staging.instantverify.in

# OAuth Providers
GOOGLE_CLIENT_ID=your-staging-google-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
FACEBOOK_CLIENT_ID=your-staging-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-staging-facebook-client-secret
GITHUB_CLIENT_ID=your-staging-github-client-id
GITHUB_CLIENT_SECRET=your-staging-github-client-secret

# Razorpay
RAZORPAY_KEY_ID=your-staging-razorpay-key
RAZORPAY_KEY_SECRET=your-staging-razorpay-secret

# Twilio
TWILIO_ACCOUNT_SID=ACyour-staging-twilio-sid
TWILIO_AUTH_TOKEN=your-staging-twilio-token
TWILIO_PHONE_NUMBER=your-staging-twilio-number

# Feature Flags
ENABLE_GOOGLE_LOGIN=true
ENABLE_FACEBOOK_LOGIN=true
ENABLE_GITHUB_LOGIN=true
ENABLE_GST_INVOICE=true

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-staging-maps-key