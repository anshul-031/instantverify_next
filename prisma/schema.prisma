// Update the User model in the existing schema.prisma file
model User {
  id                String    @id @default(cuid())
  firstName         String
  lastName          String
  email             String    @unique
  phone             String    @unique
  password          String?
  dateOfBirth       DateTime
  emailVerified     DateTime?
  image             String?
  language          String    @default("en")
  theme             String    @default("light")
  emailNotifications Boolean  @default(true)
  smsNotifications   Boolean  @default(true)
  role              UserRole  @default(REGULAR)
  credits           Int       @default(0)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  accounts          Account[]
  sessions          Session[]
  reports           Report[]
  verificationRequests VerificationRequest[] @relation("Requester")
  receivedRequests  VerificationRequest[]    @relation("Responder")
  transactions      Transaction[]
  subUsers          User[]    @relation("AdminToSubUser")
  admin             User?     @relation("AdminToSubUser", fields: [adminId], references: [id])
  adminId           String?
}