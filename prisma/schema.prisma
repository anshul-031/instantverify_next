// Update the schema to include GST fields
model User {
  id                String    @id @default(cuid())
  firstName         String
  lastName          String
  email             String    @unique
  phone             String    @unique
  password          String?
  dateOfBirth       DateTime
  emailVerified     DateTime?
  image             String?
  language          String    @default("en")
  role              UserRole  @default(REGULAR)
  credits           Int       @default(0)
  address           String?   // Added for invoice
  gstin             String?   // Added for invoice
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  accounts          Account[]
  sessions          Session[]
  reports           Report[]
  verificationRequests VerificationRequest[] @relation("Requester")
  receivedRequests  VerificationRequest[]    @relation("Responder")
  transactions      Transaction[]
  notifications     Notification[]
  subUsers          User[]    @relation("AdminToSubUser")
  admin             User?     @relation("AdminToSubUser", fields: [adminId], references: [id])
  adminId           String?
}